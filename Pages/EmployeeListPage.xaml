<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMvvmDemo.Pages.EmployeeListPage"
             Title="Employees"
             xmlns:vm="clr-namespace:MauiMvvmDemo.Models.ViewModels"
             xmlns:models="clr-namespace:MauiMvvmDemo.Models"
             x:DataType="vm:EmployeesViewModel">
    <ScrollView>
        <FlexLayout Direction="Column">
        <Frame Margin="5" Padding="5" FlexLayout.Basis="Auto">
            <VerticalStackLayout Padding="10">
                <Entry x:Name="Id" Placeholder="Employee ID" Text="{Binding Employee.EmployeeId}"/>
                <Entry x:Name="Name" Placeholder="Name" Text="{Binding Employee.EmployeeName}"/>
                <Entry x:Name="Email" Placeholder="Email" Text="{Binding Employee.Email}"/>
                <HorizontalStackLayout>
                    <Label Text="Blocked"/>
                    <Switch x:Name="Blocked" IsToggled="{Binding Employee.Blocked}"/>
                </HorizontalStackLayout>
                <Button x:Name="Adicion" Text="Add Employee" Margin="10" Clicked="Adicion_Clicked"/>
                <Button x:Name="Terminar" Text="Terminar" Margin="10" Clicked="Terminar_Clicked"/>
                </VerticalStackLayout>
        </Frame>


            <CollectionView x:Name="collectionView" EmptyView="Sin datos registrados" SelectionMode="Single">
                <CollectionView.Header>
                    <VerticalStackLayout BackgroundColor="#512bd4" Padding="5">
                        <Label HorizontalOptions="Center" Text="Employees" TextColor="white"/>
                        <Button Text="Revisar seleccionado" Clicked="Detalles_Clicked" BackgroundColor="Blue"/>
                        <Button Text="Eliminar seleccionado" Clicked="Eliminar_Clicked" BackgroundColor="Red"/>
                    </VerticalStackLayout>
                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type models:Employee}">
                        <VerticalStackLayout Margin="5">
                            <HorizontalStackLayout>
                                <VerticalStackLayout HorizontalOptions="Fill" Margin="5">
                                    <Label x:Name="IdEmpleado" Text="{Binding EmployeeId}"/>
                                    <Label x:Name="NombreEmpleado" Text="{Binding EmployeeName}"/>
                                    <Switch x:Name="BlockedEmpleado" IsToggled="{Binding Blocked}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
    </FlexLayout>
    </ScrollView>
</ContentPage>